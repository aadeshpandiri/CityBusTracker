<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:rotationX="0"
        android:rotationY="0"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"

            >


            <TextView
                android:id="@+id/tv_busname"
                android:layout_width="215dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_destination"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:drawableLeft="@drawable/ic_bus_logo"
                android:gravity="center_vertical"
                android:text="JT-07"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tv_destination"
                android:layout_width="215dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_currentLocation"
                android:layout_alignParentRight="true"
                android:layout_marginTop="11dp"
                android:layout_marginRight="10dp"
                android:drawableLeft="@drawable/ic_my_location"
                android:gravity="center_vertical"
                android:text="Gulshan e Jamal"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tv_currentLocation"
                android:layout_width="215dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:drawableLeft="@drawable/ic_baseline_location_on_24"
                android:gravity="center_vertical"
                android:text="Saddar"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tv_arrival"
                android:layout_width="91dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/dst1"
                android:layout_alignStart="@+id/dst1"
                android:layout_alignEnd="@+id/dst1"
                android:layout_centerInParent="true"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="15dp"
                android:text="13:00"
                android:textSize="18dp" />

