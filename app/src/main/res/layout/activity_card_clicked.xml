<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient10"
    tools:context=".CardClicked">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="40dp"
            android:layout_gravity="center"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_margin="10dp"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_marginBottom="40dp"
                android:text="Route Map"/>

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:src="@drawable/papermap"/>





            <Button
                android:id="@+id/mappick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/pickup_bg"
                android:text="Pick-Up Point"
                android:textSize="14dp"
                android:textStyle="bold"
                android:onClick="gotomap"
                android:elevation="15dp"
                app:backgroundTint="@null"
                android:layout_marginBottom="30dp"
                android:textColor="@color/white"
                 />

            <Button
                android:id="@+id/mapdest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/dest_bg"
                android:text="Destination Point"
                android:textSize="14dp"
                android:textStyle="bold"
                android:elevation="15dp"
                android:onClick="gotodestmap"
                android:layout_marginBottom="30dp"
                app:backgroundTint="@null"
                android:textColor="@color/white"
                />
        </LinearLayout>


    </ScrollView>


</LinearLayout>